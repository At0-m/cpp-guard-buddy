{
  "name": "cpp-guard-buddy",
  "displayName": "C/C++ Header Guard Buddy",
  "description": "Автоматически вставляет include guard или #pragma once и переключает их в заголовочных файлах C/C++.",
  "version": "0.0.1",
  "publisher": "At0-m",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:c",
    "onLanguage:cpp",
    "onCommand:cpp-guard-buddy.insertGuard",
    "onCommand:cpp-guard-buddy.usePragmaOnce",
    "onCommand:cpp-guard-buddy.toggle"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cpp-guard-buddy.insertGuard",
        "title": "Header Guard: Insert include guard"
      },
      {
        "command": "cpp-guard-buddy.usePragmaOnce",
        "title": "Header Guard: Use #pragma once"
      },
      {
        "command": "cpp-guard-buddy.toggle",
        "title": "Header Guard: Toggle guard/pragma"
      }
    ],
    "keybindings": [
      {
        "command": "cpp-guard-buddy.toggle",
        "key": "ctrl+alt+g",
        "when": "editorTextFocus && resourceExtname =~ /\\.(h|hpp|hh|hxx)$/"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ."
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "@types/vscode": "1.85.0"
  }
}